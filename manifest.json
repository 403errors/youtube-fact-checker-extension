{
  "manifest_version": 3,
  "name": "AI YouTube Fact-Check",
  "version": "1.0.0",
  "description": "AI-powered fact-checking for YouTube videos with advanced verification and reliability scoring",
  
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self'; style-src 'self' 'unsafe-inline';"
  },
  
  "permissions": [
    "activeTab",
    "storage",
    "scripting"
  ],
  
  "host_permissions": [
    "https://www.youtube.com/*",
    "https://generativelanguage.googleapis.com/*"
  ],
  
  "content_scripts": [
    {
      "matches": ["https://www.youtube.com/watch*"],
      "js": ["content.js"],
      "css": ["styles.css"],
      "run_at": "document_idle"
    }
  ],
  
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  
  "action": {
    "default_popup": "popup.html",
    "default_title": "AI YouTube Fact-Check Settings",
    "default_icon": {
      "16": "icons/icon16.png",
      "32": "icons/icon32.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  
  "web_accessible_resources": [
    {
      "resources": [
        "icons/*",
        "styles.css",
        "core/*.js",
        "ui/*.js",
        "utils/*.js",
        "transcript/*.js",
        "transcript/methods/*.js",
        "transcript/utils/*.js"
      ],
      "matches": ["https://www.youtube.com/*"]
    }
  ],
  
  "minimum_chrome_version": "88"
}